

<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<style>
    .box-body {
    height: 300px;
    overflow: auto;
}
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
      <!-- Content Header (Page header) -->	  
      <div class="content-header">
          <div class="d-flex align-items-center">
              <div class="me-auto">
                  <h4 class="page-title">All Documents</h4>
                  <div class="d-inline-block align-items-center">
                      <nav>
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                              <li class="breadcrumb-item" aria-current="page">All Documents</li>
                          </ol>
                      </nav>
                  </div>
              </div>
              
          </div>
      </div>

      <!-- Main content -->
      <section class="content">
          <div class="row">
            <% vectors.forEach(vector=> { %>
            <div class="col-md-6">
                
                <div class="box">
                    <div class="box-header with-border">
                      <h4 class="box-title">ID : <%= vector.id %></h4><br>
                      <h4 class="box-title">Title : <%= vector.title %></h4>
                    </div>
                    <div class="box-body">
                        <p><%= vector.text %></p>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <a href="edit-document?id=<%= vector.id %>" class="btn btn-small btn-primary" >Edit</a>
                        <a href="delete-document?id=<%= vector.id %>" class="btn btn-small btn-danger" >Delete</a>
                    </div>
                    <!-- /.box-footer-->
                </div>
            </div>

            <% }); %>
          </div>
      </section>

    
    </div>
</div>
</div>

<%- include('layouts/footer.ejs') %>