<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
      <!-- Content Header (Page header) -->	  
      <div class="content-header">
          <div class="d-flex align-items-center">
              <div class="me-auto">
                  <h4 class="page-title">English Questions</h4>
                  <div class="d-inline-block align-items-center">
                      <nav>
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                              <li class="breadcrumb-item" aria-current="page">English Questions</li>
                          </ol>
                      </nav>
                  </div>
              </div>
              
          </div>
      </div>

      <!-- Main content -->
      <section class="content">
          <div class="row">
            <div class="col-lg-12 col-12">
                <div class="box">
                  <div class="box-header with-border">
                    <h4 class="box-title">Add English Question</h4>
                  </div>
                  <!-- /.box-header -->
                  <form class="form"   id="form"  onsubmit="return false;">
                      <div class="box-body">
                          
                          <div class="row">
                            <div class="alert alert-success mt-2" role="alert" id="success" style="display: none;">
                       
                            </div>
                            <div class="alert alert-danger mt-2" role="alert" id="failed" style="display: none;">
                             
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label class="form-label">Question</label>
                                <input type="text" class="form-control" placeholder="Question" id="question" name="question" required>
                                <input type="hidden" class="language" id="language" name="language" value="english">
                              </div>
                            </div>
                           
                            <div class="col-md-4">
                                <div class="form-group">
                                  <label class="form-label">Select Intent</label>
                                  <select class="form-control select2"  id="intent"  name="intent" data-placeholder="Select a intent"
                                  style="width: 100%;" required>
                                <% for (var i = 0; i < intents.length; i++) { %>
                                <option value="<%= intents[i].id %>"><%= intents[i].intent %> - <%= intents[i].node_id %></option>
                                <% } %>
                                
                          </select>
                                </div>
                            </div>
                           
                      </div>
                      <!-- /.box-body -->
                      <div class="box-footer">
                         
                          <button type="submit" class="btn btn-primary">
                            <i class="ti-save-alt"></i> Add Question
                          </button>
                      </div>  
                  </form>
                </div>
                <!-- /.box -->			
          </div>
          </div>

          <div class="row mt-5">
            <div class="col-12">
                <div class="box">
                    <div class="box-header with-border">
                      <h4 class="box-title">Questions</h4>
                    </div>
                    <div class="box-body">
                      <div class="table-responsive">
                          <table id="example1" class="table table-bordered table-striped">
                              <thead>
                                  <tr>
                                      <th>Question</th>
                                      <th>Actions</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% for (var i = 0; i < questions.length; i++) { %>
                                     
                                      <tr>
                                          <td><%= questions[i].question %></td>
                                          <td class="">
                                              <div class="clearfix">
                                                  <a href="/edit-question?id=<%= questions[i].id %>&language=english"><button type="button" class="waves-effect waves-light btn btn-info mb-5 btn-xs">Edit</button></a>
                                                  <a href="/delete-question?id=<%= questions[i].id %>"><button type="button" class="waves-effect waves-light btn btn-danger mb-5 btn-xs">Delete</button></a>
                                                 
                                              </div>
                                              
                                          </td>
                                      </tr>
                                    <% } %>
                                  
                                 
                              </tbody>
                          </table>
                      </div>
                    </div>
                    <!-- /.box-body -->
                   
                </div>
            </div>
        </div>
      </section>

    
    </div>
</div>
</div>
<script src="custom-js/add-question.js"></script>
<%- include('layouts/footer.ejs') %>

  